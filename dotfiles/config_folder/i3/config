# Enable volume controls
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -q set Master -q 5%+ && pkill -RTMIN+10 i3blocks # increase volume
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q set Master -q 5%- && pkill -RTMIN+10 i3blocks # decrease volume
bindsym XF86AudioMute exec --no-startup-id amixer -q set Master toggle && pkill -RTMIN+10 i3blocks # mute volume
bindsym $mod+e exec --no-startup-id emacsclient -c

# Screen brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id enlighten +10% # increase brightness
bindsym XF86MonBrightnessDown exec --no-startup-id enlighten -10% # decrease brightness

# Media player controls
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause # play
#bindsym XF86AudioPause exec playerctl pause # pause
bindsym XF86AudioNext exec --no-startup-id playerctl next # next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous # previous

